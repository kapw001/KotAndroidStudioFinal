<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@drawable/cpkottab"
        android:src="@drawable/cpkottab" />

    <RelativeLayout
        android:id="@id/appVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginLeft="18.0dip"
        android:layout_marginTop="20.0dip"
        android:gravity="center"
        android:visibility="gone">"

        <TextView
            android:id="@id/lblVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2.0dip"
            android:text="Version : "
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@id/txtVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lblVersion"
            android:padding="2.0dip"
            android:text="9.9.15"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#fffad300" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/outletInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="40.0dip"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@id/outletInfoTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2.0dip"
            android:text="Outlet ID : "
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@id/outletInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/outletInfoTextLabel"
            android:padding="2.0dip"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#fffad300" />

        <TextView
            android:id="@id/kotIpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/outletInfoTextLabel"
            android:padding="2.0dip"
            android:text="KOT Server IP : "
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@id/kotIpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/outletInfoText"
            android:layout_toRightOf="@id/kotIpLabel"
            android:padding="2.0dip"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#fffad300" />

        <TextView
            android:id="@id/tabletIpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kotIpLabel"
            android:padding="2.0dip"
            android:text="Tablet ID : "
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@id/tabletIpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kotIpText"
            android:layout_toRightOf="@id/tabletIpLabel"
            android:padding="2.0dip"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#fffad300" />
    </RelativeLayout>
</RelativeLayout>